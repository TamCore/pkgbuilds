# Maintainer: Philipp 'TamCore' B. <philipp [at] tamcore [dot] eu>
pkgname=keepasshttp
pkgver=1.5
pkgrel=1
pkgdesc="KeePass plugin to expose password entries securely (256bit AES/CBC) over HTTP"
license=('unknown')
depends=('keepass')
arch=(i686 x86_64)
url="http://github.com/pfn/keepasshttp"
_commit="16fdaa2d62c8a48fe273023bbdf979f850c41390"
source=(KeePassHttp.dll::https://github.com/pfn/keepasshttp/raw/${_commit}/mono/KeePassHttp.dll
        Newtonsoft.Json.dll::https://github.com/pfn/keepasshttp/raw/${_commit}/mono/Newtonsoft.Json.dll
        KeePassHttp.plgx::https://github.com/pfn/keepasshttp/raw/${_commit}/KeePassHttp.plgx)

md5sums=('0d4f163c74c2cca28801f1f5af71c237'
         '6dc7988bf02bdccb02c03ccd5cfc856e'
         '7c29d339ae9d842883bab1a2c11d25c5')

package() {
    cd ${srcdir}
    mkdir -p ${pkgdir}/usr/share/keepass
    install -m644 {KeePassHttp.{dll,plgx},Newtonsoft.Json.dll} ${pkgdir}/usr/share/keepass
}
