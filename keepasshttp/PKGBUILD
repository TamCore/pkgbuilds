# Maintainer: Philipp 'TamCore' B. <philipp [at] tamcore [dot] eu>
pkgname=keepasshttp
pkgver=1.6.1.0
pkgrel=1
pkgdesc="KeePass plugin to expose password entries securely (256bit AES/CBC) over HTTP"
license=('unknown')
depends=('keepass')
arch=(i686 x86_64)
url="http://github.com/pfn/keepasshttp"
_commit="76cd8b7c0d5917a8ffbd43bb5bf83a43134b44d3"
source=(KeePassHttp.plgx::https://github.com/pfn/keepasshttp/raw/${_commit}/KeePassHttp.plgx)
md5sums=('8074418638d134ce0df7137a279cef5a')

package() {
    mkdir -p "${pkgdir}"/usr/share/keepass
    install -m644 KeePassHttp.plgx "${pkgdir}"/usr/share/keepass
}
