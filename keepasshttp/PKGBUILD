# Maintainer: Philipp 'TamCore' B. <philipp [at] tamcore [dot] eu>
pkgname=keepasshttp
pkgver=1.0.6.1
pkgrel=1
pkgdesc="KeePass plugin to expose password entries securely (256bit AES/CBC) over HTTP"
license=('unknown')
depends=('keepass')
arch=(i686 x86_64)
url="http://github.com/pfn/keepasshttp"
_commit="5d4122ef386fcda9e1009a27f18dee53ad498ee9"
source=(KeePassHttp.dll::https://github.com/pfn/keepasshttp/raw/${_commit}/KeePassHttp/KeePassHttp.dll
        Newtonsoft.Json.dll::https://github.com/pfn/keepasshttp/raw/${_commit}/KeePassHttp/Newtonsoft.Json.dll)
md5sums=('25383e22f9fb211680f40a902c3c5eca'
         '6dc7988bf02bdccb02c03ccd5cfc856e')

package(){
   cd $srcdir
   mkdir -p $pkgdir/usr/share/keepass
   install -m644 {KeePassHttp.dll,Newtonsoft.Json.dll} $pkgdir/usr/share/keepass
}
