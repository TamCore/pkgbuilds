# Maintainer: Philipp 'TamCore' B. <philipp@tamcore.eu>

pkgname=facebook-qt
pkgver=LATEST
pkgrel=1
pkgdesc='‘Facebook Qt’ is the latest attempt at marrying the web’s most visited website with the traditional desktop OS'
url='https://github.com/anandbose/facebook'
arch=('i686' 'x86_64')
license=('unknown')
depends=('qt4')
source=('https://github.com/anandbose/facebook/archive/master.zip' 'facebook-qt.desktop')
md5sums=('752c27efaff8cc2941889d1fa749024e'
         'e5ad0f636267f93eadb11767fbea11c2')

build() {
  cd ${srcdir}/facebook-master
  qmake-qt4 Facebook.pro
  make
}

package(){
  cd ${srcdir}/facebook-master
  install -D -m755 Facebook ${pkgdir}/usr/bin/facebook-qt
  install -D -m644 res/logo/facebook-256x256.png ${pkgdir}/usr/share/pixmaps/facebook-qt.png
  install -D -m644 ${srcdir}/facebook-qt.desktop ${pkgdir}/usr/share/applications/facebook-qt.desktop
}
