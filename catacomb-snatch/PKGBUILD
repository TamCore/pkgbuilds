# Maintainer: Philipp 'TamCore' B. <philipp [at] tamcore [dot] eu>

pkgname=catacomb-snatch
pkgver=LATEST
pkgrel=1
pkgdesc="Catacomb Snatch is a real-time strategy shoot'em up with a steampunk ancient Egypt theme"
arch=(any)
url="http://www.mojang.com/2012/02/15/humble-bundle-mojam/"
license=('custom')
depends=('java-runtime' 'xorg-server-utils' 'openal')
source=(http://assets.mojang.com/mojam/mojam.jar http://assets.mojang.com/mojam/cs_icon.png catacomb-snatch.desktop catacomb-snatch)
md5sums=('339f463a1995be85e62d30d0350ac66b'
         '5ab1eee2b8690b6671073ba62423b3a2'
         '040847ddc7698129b98d302075adc8f9'
         '9c26092103b98564f9127936faf72fdb')

package() {
    install -D -m644 cs_icon.png ${pkgdir}/usr/share/icons/catacomb-snatch.png
    install -D -m644 mojam.jar ${pkgdir}/usr/bin/catacomb-snatch.jar
    install -D -m644 catacomb-snatch.desktop ${pkgdir}/usr/share/applications/catacomb-snatch.desktop
    install -D -m755 catacomb-snatch ${pkgdir}/usr/bin/catacomb-snatch    
}
