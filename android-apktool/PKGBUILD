# Maintainer: Philipp 'TamCore' B. <philipp {at} tamcore {dot} eu>
pkgname=android-apktool
pkgver=1.5.2
pkgrel=3
pkgdesc="a tool for reengineering Android apk files"
arch=(i686 x86_64)
url="http://forum.xda-developers.com/showthread.php?t=1755243"
license=('Apache 2.0')
depends=('java-runtime' 'android-sdk-build-tools')
source=(https://android-apktool.googlecode.com/files/apktool${pkgver}.tar.bz2
        https://android-apktool.googlecode.com/files/apktool-install-linux-r04-brut1.tar.bz2)
sha256sums=('9bae37b16f3b3f02b8c9fed9028df56429695e03330b517894d1186cdb8f8607'
            'cffa5c0a46bab9c66da02cc5db651c3a8321bee98580815e44c802d62a696dfa')

package() {
  mkdir -p "${pkgdir}"/usr/bin
  install -m 0755 "${srcdir}"/apktool "${pkgdir}"/usr/bin
  install -m 0644 "${srcdir}"/apktool${pkgver}/apktool.jar "${pkgdir}"/usr/bin/apktool.jar
}
