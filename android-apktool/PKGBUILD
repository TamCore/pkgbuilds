# Maintainer: Philipp 'TamCore' B. <philipp {at} tamcore {dot} eu>
pkgname=android-apktool
pkgver=1.4.3
pkgrel=1
pkgdesc="a tool for reengineering Android apk files"
arch=(i686 x86_64)
url="https://code.google.com/p/android-apktool/"
license=('Apache 2.0')
depends=('java-environment' 'gcc-libs' 'bash' 'zlib' 'android-sdk-platform-tools')
source=(http://android-apktool.googlecode.com/files/apktool${pkgver}.tar.bz2 http://android-apktool.googlecode.com/files/apktool-install-linux-r04-brut1.tar.bz2)
md5sums=('3d0478c4d23c7829edc024266697fef9'
         'f7fc0f06ebee9a975e5296296a396534')

build() {
  mkdir -p $pkgdir/usr/bin
  install -m 0755 $srcdir/apktool $pkgdir/usr/bin
  install -m 0644 $srcdir/apktool.jar $pkgdir/usr/bin
}
